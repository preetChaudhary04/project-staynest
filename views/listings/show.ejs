<% layout("/layouts/boilerplate") %>

  <body>
    <div class="row mt-2">
      <div class="col-6 offset-3">
        <div class="card">
          <img src="<%= listing.image %>" class="card-img-top" alt="listing_image">
          <div class="card-body">

            <ul class="card-text">
              <li><b>
                  <%= listing.title %>
                </b></li> <br>
              <li>
                <%= listing.description %>
              </li> <br>
              <li><b>Price</b>: &#8377;<%= listing.price.toLocaleString("EN-IN")%>
              </li>
              <li><b>Location</b>: <%= listing.location %>
              </li>
              <li><b>Country</b>: <%= listing.country %>
              </li>
            </ul>

          </div>
          <form method="GET" action="/listings/<%= listing._id %>/edit">
            <button class="btn btn-light btn-show">Edit</button>
          </form>
          <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
            <button class="btn btn-dark btn-show">Delete</button>
          </form>
        </div>

        <hr>

        <h3>Add a review</h3>

        <form method="POST" action="/listings/<%= listing._id %>/reviews" class="mt-3">
          <div class="mt-3 mb-3">
            <label for="rating" class="form-label fw-semibold">Rating: </label>
            <input class="form-range" id="rating" name="review[rating]" type="range" min="1" max="5">
          </div>

          <div class="mb-3">
            <label for="rating" class="form-label fw-semibold">Comment</label>
            <textarea class="form-control" name="review[comment]" id="comment" cols="30" rows="4"></textarea>
          </div>

          <button class="btn btn-sm btn-dark">Submit</button>

        </form>
      </div>
    </div>


  </body>