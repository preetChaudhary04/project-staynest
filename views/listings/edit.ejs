<% layout("/layouts/boilerplate") %>

  <body>
    <div class="row">
      <div class="col-6 offset-3">
        <h3 class="mt-2 mb-2">Edit your form</h3>
        <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">

          <div>
            <label for="title" class="form-label fw-semibold">Enter title</label>
            <input class="form-control" type="text" name="listing[title]" value="<%= listing.title %>">
          </div>

          <div>
            <label for="description" class="form-label fw-semibold">Enter description</label>
            <textarea class="form-control" name="listing[description]"><%= listing.description %></textarea>
          </div>

          <div>
            <label for="image" class="form-label fw-semibold">Enter Image link/URL</label>
            <input class="form-control" type="text" name="listing[image]" value="<%= listing.image %>">
          </div>

          <div class="row">
            <div class="col-md-4">
              <label for="price" class="form-label fw-semibold">Enter price</label>
              <input class="form-control" type="number" name="listing[price]" value="<%= listing.price %>">
            </div>

            <div class="col-md-8">
              <label for="location" class="form-label fw-semibold">Enter location</label>
              <input class="form-control" type="text" name="listing[location]" value="<%= listing.location %>">
            </div>
          </div>

          <div>
            <label for="country" class="form-label fw-semibold">Enter country</label>
            <input class="form-control" type="text" name="listing[country]" value="<%= listing.country %>">
          </div>

          <button class="btn btn-dark mt-3">Edit</button>
        </form>
      </div>
    </div>
  </body>